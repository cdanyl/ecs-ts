{
  "name": "webpack-ts-kit",
  "version": "1.0.0",
  "description": "A Webpack 3, TypeScript 2 starter kit",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --config webpack.config.js",
    "build": "npm run clean:build && NODE_ENV=production webpack --config webpack.config.js",
    "lint": "tslint -c tslint.json --format stylish \"./src/*.ts*\""
  },
  "keywords": [
    "webpack",
    "typescript",
    "starter kit",
    "starter project",
    "boilerplate"
  ],
  "author": "Aaron Leo Cooper <aaronleocooper@gmail.com>",
  "license": "MIT",
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "devDependencies": {
    "@types/node": "^8.0.17",
    "html-webpack-plugin": "^2.29.0",
    "source-map-support": "^0.4.15",
    "ts-loader": "^2.3.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.5.0",
    "typescript": "^2.4.2",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "webpack": "^3.3.0",
    "webpack-dev-server": "^2.6.1"
  },
  "dependencies": {
    "@types/uuid": "^3.4.0",
    "uuid": "^3.1.0"
  }
}
